        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_500"
            android:background="@drawable/btn1"
